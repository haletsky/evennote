<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:evenote.pages"
      xmlns:evenote="clr-namespace:evenote" x:Class="evenote.pages.login_page"
      mc:Ignorable="d" 
      d:DesignHeight="419" d:DesignWidth="700"
      Title="login_page">



    <Grid>
        <TextBox x:Name="login" Text="login" Margin="50,85,50,192" HorizontalAlignment="Center" Width="200" Style="{DynamicResource TextBoxStyle2}" GotFocus="login_GotFocus" LostFocus="login_LostFocus"/>
        <PasswordBox x:Name="password" Password="password" Margin="50,125,50,152" HorizontalAlignment="Center" Width="200" Style="{DynamicResource PassBoxStyle}" LostFocus="password_LostFocus" GotFocus="password_GotFocus"/>
        <Button x:Name="button" Content="Log In" Style="{DynamicResource ButtonStyle1}" Height="30" Margin="105,180,105,90" HorizontalAlignment="Center" Width="90" Click="button_Click" IsDefault="True" />
        <Image x:Name="image" HorizontalAlignment="Center" Source="/evenote;component/images/logo.png" VerticalAlignment="Center" Margin="0,0,0,300" Width="500"/>
    </Grid>
</Page>
