<Page x:Class="evenote.pages.notes_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:evenote.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="630"
      Title="notes_page">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="addnote_btn" Content="Add" HorizontalAlignment="Right" Style="{DynamicResource ButtonStyle}" Margin="0,10,10,0" VerticalAlignment="Top" Click="addnote_btn_Click" Grid.Column="1" Height="30" Width="90"/>
        <Button x:Name="editnote_btn" Content="Edit" HorizontalAlignment="Right" Style="{DynamicResource ButtonStyle}" Margin="0,60,10,0" VerticalAlignment="Top" Click="editnote_btn_Click" Grid.Column="1" Height="30" Width="90"/>
        <Button x:Name="deletenote_btn" Content="Delete" HorizontalAlignment="Right" Style="{DynamicResource ButtonStyle}" Margin="0,110,10,0" VerticalAlignment="Top" Click="deletenote_btn_Click" Grid.Column="1" Height="30" Width="90"/>
        <Button x:Name="syncnote_btn" Content="Sync" HorizontalAlignment="Right" Style="{DynamicResource ButtonStyle}" Margin="0,160,10,0" VerticalAlignment="Top" Click="sendnote_btn_Click" Grid.Column="1" Height="30" Width="90"/>
        <ListView  x:Name="listView" Margin="10,0,0,0" Foreground="#FF112700" SelectionMode="Single" Initialized="listView_Initialized" LostFocus="listView_LostFocus" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Hidden" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
        <!--<StatusBar Height="20" Margin="0" VerticalAlignment="Bottom" Background="#FFD1F0B8" Grid.Column="1">
            <StatusBar.Effect>
                <DropShadowEffect Direction="45" Opacity="0.5" ShadowDepth="1"/>
            </StatusBar.Effect>
        </StatusBar>
        <Rectangle Fill="#FFD1F0B8" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="30" Height="20" Margin="-20,0,0,0"  />-->
        <Label x:Name="statusBackup" VerticalAlignment="Bottom" FontFamily="Microsoft YaHei UI Light" Grid.Column="1" HorizontalAlignment="Right" FontSize="13.333" Foreground="Gray" />
    </Grid>
</Page>
